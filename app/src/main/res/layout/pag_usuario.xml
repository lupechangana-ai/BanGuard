<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guadalupe Changana"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:padding="8dp"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="160dp"
        android:src="@drawable/guardia"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/codigo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escanear QR"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginRight="100dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver tus Registros"
            android:textColor="@color/celeste2"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="90dp"
            android:clickable="true"
            android:focusable="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:textSize="20sp"
            android:backgroundTint="@color/celeste2"
            android:layout_marginTop="40dp"
            android:layout_marginRight="130dp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="220dp"
        android:src="@drawable/escritura"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro Manual"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="334dp"
        android:layout_marginLeft="210dp"/>
</RelativeLayout>